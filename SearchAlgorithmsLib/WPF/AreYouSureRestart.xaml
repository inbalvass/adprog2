<Window x:Class="WPF.AreYouSureRestart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="AreYouSureRestart" Height="300" Width="300">
    <Grid>
        <Grid>
            <Label x:Name="label" Content="Restart the game" HorizontalAlignment="Left" Margin="80,62,0,0" VerticalAlignment="Top" FontSize="17" Height="35" Width="156"/>
            <Button x:Name="button" Content="Yes" HorizontalAlignment="Left" Margin="59,155,0,0" VerticalAlignment="Top" Width="75" FontSize="15" Click="clicked_yes"/>
            <Button x:Name="button1" Content="No" HorizontalAlignment="Left" Margin="161,155,0,0" VerticalAlignment="Top" Width="75" FontSize="15" Click="clicked_no"/>
            <Label x:Name="label1" Content=" Are you sure?"  FontSize="17" FontWeight="Bold" HorizontalAlignment="Left" Margin="89,102,0,0" VerticalAlignment="Top"/>
        </Grid>

    </Grid>
</Window>
