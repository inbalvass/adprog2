<Window x:Class="WPF.MPwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MPwindow" Height="300" Width="300">
    <Grid>
        <Viewbox VerticalAlignment="Top">
            <StackPanel Name="canvas" VerticalAlignment="Top" Loaded="canvas_Loaded">
                <DockPanel Name="dockkPanel1" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Button x:Name="restart" Content="Restart Game" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="50" FontWeight="Bold" FontSize="30" Click="clicked_restart"/>
                    <Button x:Name="menu" Content="Main menu" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="50" FontWeight="Bold" FontSize="30" Click="clicked_menu"/>
                </DockPanel>
                <DockPanel Name="dockPanelForCanvas" Height="804" Width="923">
                    <StackPanel Name="canvas1" Width="452"></StackPanel>
                    <StackPanel Name="canvas2"></StackPanel>
                </DockPanel>
            </StackPanel>
        </Viewbox>

    </Grid>
</Window>
