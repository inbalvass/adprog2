<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="grid1">
        <StackPanel Name="stackPanel1" VerticalAlignment="Center">
            <Button x:Name="button" Content="Single player" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_single"/>
            <Button x:Name="button1" Content="Multi player" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_multi"/>
            <Button x:Name="button2" Content="Settings" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_settings"/>
        </StackPanel>
        <Canvas>
            <Image x:Name="image" HorizontalAlignment="Left" Height="200" Margin="30,30,0,0" VerticalAlignment="Top" Width="110" Source="minion.jpg"/>
        </Canvas>
    </Grid>
</Window>
