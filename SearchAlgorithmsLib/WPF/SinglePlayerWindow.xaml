<Window x:Class="WPF.SinglePlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d" Height="650" Width="600"
         WindowStartupLocation="CenterScreen">
    <Grid>

            <Canvas Name="canvas" VerticalAlignment="Top" Height="620" Loaded="canvas_Loaded">
                <DockPanel Name="dockkPanel1" VerticalAlignment="Top">
                    <Button x:Name="restart" Content="Restart Game" HorizontalAlignment="Center" Margin="40,10,40,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_restart"/>
                    <Button x:Name="solve" Content="Solve Maze" HorizontalAlignment="Center" Margin="0,10,20,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_solve"/>
                    <Button x:Name="menu" Content="Main menu" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" Width="150" Height="30" FontWeight="Bold" Click="clicked_menu"/>
                </DockPanel>
            </Canvas>
    </Grid>
</Window>
