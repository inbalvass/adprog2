<Window x:Class="WPF.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="WinWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Congratulations, You Won!" FontSize="20" FontStyle="Italic" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="105,180,0,0" VerticalAlignment="Top" Width="75" Click="Clicked_OK"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="92,10,0,0" VerticalAlignment="Top" Width="100" Source="/images/win.jpg"/>

    </Grid>
</Window>
